   "fieldtype": "Section Break",
   "label": "Appeal Details"
  },
  {
   "fieldname": "termination_request",
   "fieldtype": "Link",
   "label": "Termination Request",
   "options": "Membership Termination Request",
   "reqd": 1,
   "in_list_view": 1
  },
  {
   "fieldname": "expulsion_entry",
   "fieldtype": "Link",
   "label": "Expulsion Entry",
   "options": "Expulsion Report Entry",
   "fetch_from": "termination_request.expulsion_entry"
