   "fieldname": "legal_rep_name",
   "fieldtype": "Data",
   "label": "Legal Representative Name",
   "depends_on": "eval:doc.legal_representative"
  },
  {
   "fieldname": "legal_rep_contact",
   "fieldtype": "Data",
   "label": "Legal Representative Contact",
   "depends_on": "eval:doc.legal_representative"
  },
  {
   "fieldname": "grounds_section",
   "fieldtype": "Section Break",
   "label": "Appeal Grounds"
  },
  {
   "fieldname": "appeal_grounds",
   "fieldtype": "Text Editor",
   "label": "Grounds for Appeal",
   "reqd": 1,
   "description": "Detailed explanation of why the termination decision should be overturned"
  },
  {
   "fieldname": "supporting_documentation",
   "fieldtype": "Text Editor",
   "label": "Supporting Documentation",
   "description": "List and description of supporting documents provided"
  },
  {
   "fieldname": "new_evidence",
   "fieldtype": "Text Editor",
   "label": "New Evidence",
   "description": "Any new evidence not available during original proceedings"
  },
  {
   "fieldname": "column_break_3",
   "fieldtype": "Column Break"
  },
  {
   "fieldname": "procedural_errors_claimed",
   "fieldtype": "Small Text",
   "label": "Procedural Errors Claimed",
   "description": "Specific procedural errors alleged in the original process"
  },
  {
   "fieldname": "remedy_sought",
   "fieldtype": "Select",
   "label": "Remedy Sought",
   "options": "Full Reinstatement\nReduction of Penalty\nNew Hearing\nProcedural Correction\nOther",
   "reqd": 1
  },
  {
   "fieldname": "review_process_section",
   "fieldtype": "Section Break",
   "label": "Review Process"
  },
  {
   "fieldname": "assigned_reviewer",
   "fieldtype": "Link",
   "label": "Assigned Reviewer",
   "options": "User"
  },
  {
   "fieldname": "review_panel",
   "fieldtype": "Small Text",
   "label": "Review Panel Members",
   "description": "List of panel members assigned to this appeal"
  },
  {
   "fieldname": "review_start_date",
   "fieldtype": "Date",
   "label": "Review Start Date"
  },
  {
   "fieldname": "column_break_4",
   "fieldtype": "Column Break"
  },
