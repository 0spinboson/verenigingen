   "read_only": 1
  },
  {
   "fieldname": "member_name",
   "fieldtype": "Data",
   "label": "Member Name",
   "fetch_from": "termination_request.member_name",
   "read_only": 1,
   "in_list_view": 1
  },
  {
   "fieldname": "column_break_1",
   "fieldtype": "Column Break"
  },
  {
   "fieldname": "appeal_date",
   "fieldtype": "Date",
   "label": "Appeal Date",
   "default": "Today",
   "reqd": 1,
   "in_list_view": 1
  },
  {
   "fieldname": "appeal_status",
   "fieldtype": "Select",
   "label": "Appeal Status",
   "options": "Draft\nSubmitted\nUnder Review\nPending Decision\nDecided - Upheld\nDecided - Rejected\nDecided - Partially Upheld\nWithdrawn\nDismissed",
   "default": "Draft",
   "reqd": 1,
   "in_list_view": 1
  },
  {
   "fieldname": "appeal_type",
   "fieldtype": "Select",
   "label": "Appeal Type",
   "options": "Procedural Appeal\nSubstantive Appeal\nNew Evidence Appeal\nFull Review Appeal",
   "reqd": 1
  },
  {
   "fieldname": "appellant_section",
   "fieldtype": "Section Break",
   "label": "Appellant Information"
  },
  {
   "fieldname": "appellant_name",
   "fieldtype": "Data",
   "label": "Appellant Name",
   "reqd": 1
  },
  {
   "fieldname": "appellant_email",
   "fieldtype": "Data",
   "label": "Appellant Email",
   "reqd": 1
  },
  {
   "fieldname": "appellant_relationship",
   "fieldtype": "Select",
   "label": "Relationship to Member",
   "options": "Self\nLegal Representative\nFamily Member\nAuthorized Representative",
   "reqd": 1
  },
  {
   "fieldname": "column_break_2",
   "fieldtype": "Column Break"
  },
  {
   "fieldname": "legal_representative",
   "fieldtype": "Check",
   "label": "Has Legal Representative",
   "default": "0"
