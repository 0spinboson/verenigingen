   "description": "Statutory deadline for appeal decision"
  },
  {
   "fieldname": "review_status",
   "fieldtype": "Select",
   "label": "Review Status",
   "options": "Not Started\nDocument Review\nEvidence Gathering\nHearing Scheduled\nHearing Completed\nDeliberations\nDecision Pending",
   "depends_on": "eval:doc.appeal_status == 'Under Review'"
  },
  {
   "fieldname": "interim_measures",
   "fieldtype": "Small Text",
   "label": "Interim Measures",
   "description": "Any interim measures ordered pending appeal decision"
  },
  {
   "fieldname": "decision_section",
   "fieldtype": "Section Break",
   "label": "Appeal Decision"
  },
  {
   "fieldname": "decision_date",
   "fieldtype": "Date",
   "label": "Decision Date"
  },
  {
   "fieldname": "decision_outcome",
   "fieldtype": "Select",
   "label": "Decision Outcome",
   "options": "Upheld\nRejected\nPartially Upheld\nRemanded for Rehearing",
   "depends_on": "eval:['Decided - Upheld', 'Decided - Rejected', 'Decided - Partially Upheld'].includes(doc.appeal_status)"
  },
  {
   "fieldname": "decision_rationale",
   "fieldtype": "Text Editor",
   "label": "Decision Rationale",
   "depends_on": "eval:doc.decision_outcome"
  },
  {
   "fieldname": "column_break_5",
   "fieldtype": "Column Break"
  },
  {
   "fieldname": "decided_by",
   "fieldtype": "Link",
   "label": "Decided By",
   "options": "User"
  },
  {
   "fieldname": "decision_panel_members",
   "fieldtype": "Small Text",
   "label": "Decision Panel Members"
  },
  {
   "fieldname": "implementation_section",
   "fieldtype": "Section Break",
   "label": "Implementation"
  },
  {
   "fieldname": "implementation_date",
   "fieldtype": "Date",
   "label": "Implementation Date"
  },
  {
   "fieldname": "implementation_actions",
   "fieldtype": "Text Editor",
   "label": "Implementation Actions",
   "description": "Actions taken to implement the appeal decision"
  },
  {
   "fieldname": "column_break_6",
   "fieldtype": "Column Break"
  },
  {
   "fieldname": "implementation_status",
   "fieldtype": "Select",
   "label": "Implementation Status",
   "options": "Not Required\nPending\nIn Progress\nCompleted\nPartially Completed",
   "depends_on": "eval:doc.decision_outcome == 'Upheld' || doc.decision_outcome == 'Partially Upheld'"
  },
  {
   "fieldname": "implementation_notes",
   "fieldtype": "Small Text",
   "label": "Implementation Notes"
  },
  {
   "fieldname": "timeline_section",
