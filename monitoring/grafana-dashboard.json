{
  "dashboard": {
    "id": null,
    "uid": "mollie-backend",
    "title": "Mollie Backend API Dashboard",
    "tags": ["mollie", "payments", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Current EUR Balance",
        "targets": [
          {
            "expr": "mollie_balance_eur",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyEUR",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Pending Settlements",
        "targets": [
          {
            "expr": "mollie_settlements_pending",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Active Disputes",
        "targets": [
          {
            "expr": "mollie_disputes_active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 3},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "gauge",
        "title": "API Rate Limit Usage",
        "targets": [
          {
            "expr": "mollie_api_rate_limit_usage * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "graph",
        "title": "Payment Processing",
        "targets": [
          {
            "expr": "rate(mollie_payments_total[5m])",
            "legendFormat": "Successful",
            "refId": "A"
          },
          {
            "expr": "rate(mollie_payment_errors_total[5m])",
            "legendFormat": "Failed",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Payments/sec"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "graph",
        "title": "API Response Times",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, mollie_api_request_duration_seconds_bucket)",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, mollie_api_request_duration_seconds_bucket)",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, mollie_api_request_duration_seconds_bucket)",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Response Time"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "type": "graph",
        "title": "Reconciliation Status",
        "targets": [
          {
            "expr": "rate(mollie_reconciliation_success_total[1h])",
            "legendFormat": "Successful",
            "refId": "A"
          },
          {
            "expr": "rate(mollie_reconciliation_failures_total[1h])",
            "legendFormat": "Failed",
            "refId": "B"
          },
          {
            "expr": "mollie_reconciliation_unmatched",
            "legendFormat": "Unmatched",
            "refId": "C"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "type": "graph",
        "title": "Balance Trends",
        "targets": [
          {
            "expr": "mollie_balance_eur",
            "legendFormat": "EUR",
            "refId": "A"
          },
          {
            "expr": "mollie_balance_usd * 0.85",
            "legendFormat": "USD (EUR equiv)",
            "refId": "B"
          },
          {
            "expr": "mollie_balance_gbp * 1.15",
            "legendFormat": "GBP (EUR equiv)",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "currencyEUR",
            "label": "Balance"
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 20},
        "type": "table",
        "title": "Recent Alerts",
        "targets": [
          {
            "expr": "ALERTS{service=\"mollie-backend\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 20},
        "type": "stat",
        "title": "Circuit Breaker Status",
        "targets": [
          {
            "expr": "mollie_circuit_breaker_state",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "CLOSED"},
              {"type": "value", "value": "1", "text": "HALF_OPEN"},
              {"type": "value", "value": "2", "text": "OPEN"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 2}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 20},
        "type": "stat",
        "title": "Webhook Queue Size",
        "targets": [
          {
            "expr": "mollie_webhook_queue_size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      }
    ]
  }
}
